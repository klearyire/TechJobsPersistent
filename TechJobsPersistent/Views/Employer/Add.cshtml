@model TechJobsPersistent.ViewModels.AddEmployerViewModel;

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessAddEmployerForm" method="post">
    <div class="form-group">
        <label>Employer Name</label>
        <input class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>Employer Location</label>
        <input class="form-control" />
        <span asp-validation-for="Location"></span>
    </div>

    <input class="btn btn-primary form-control" type="submit" value="Submit" />
</form>